<!DOCTYPE html>
<html>
<head>
  <title>Classroom sense</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery', 'jquery.flot' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="container_24" id="header">
  <div class="grid_3" align="center">
    <a href="/"><img style="width:75px" src="/images/logo.jpg"/></a>
  </div>
  <% if false %>
  <div class="grid_3">
    <h2 style="font-size: 250%;padding:0;margin:0;">Sun</h2><h3 style="font-size: 175%;position:relative;top:-10px;"><%= Time.now.strftime("%b") %> <%= Time.now.day %></h3>
  </div>
  <% end %>
  <div class="grid_18 weather">
    <h1 style="font-size: 275%">Mission High School</h1>
  </div>
</div>
<div class="clear"></div>
<%= yield -%>
<hr/>
<% if params[:action] != 'home' %>
<div class="container_24">
  <div class="grid_12">
    <input type="text" name="search" />
    <input type="submit" onclick="javascript: window.location = '/pages/search_results';" value="Search for students" />
  </div>
  <div class="grid_11">
    <div style="float:right">
      <a style="font-size: 125%;" href="https://spreadsheets.google.com/viewform?formkey=dEczR3l0M0ZXZ3BwblBtM1Fyb0w0Q2c6MQ">Send us feedback</a>
    </div>
  </div>
</div>
<% end %>
</body>
</html>
