<div class="container_24">
  <div class="grid_20">
    <h1>Student Detail</h1>
  </div>
</div>
<div class="container_24">
  <div class="grid_20">
    <a href="/pages/dashboard">Back to dashboard</a>
    <a href="/pages/student_overview">Back to student overview</a>
  </div>
</div>
<div class="container_24">
  <div class="grid_8">
    <%= widget "Student Info" do %>
      <%= render :partial => "student_info" %>
    <% end %>
    <%= widget "Guardian Contact Info" do %>
      <%= render :partial => "student_contact_info" %>
    <% end %>
    <%= widget "Schedule" do %>
      <table>
        <thead>
          <tr>
            <th>Class</th>
            <th>Room</th>
            <th>Teacher</th>
            <th>Section</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Math 1</td>
            <td class="numeric">101</td>
            <td><a href="/pages/teacher_detail">Mary Smith</a></td>
            <td class="numeric">3</td>
          </tr>
          <tr>
            <td>Social Studies</td>
            <td class="numeric">137</td>
            <td><a href="/pages/teacher_detail">Joe Arrington</a></td>
            <td class="numeric">2</td>
          </tr>
          <tr>
            <td>History</td>
            <td class="numeric">121</td>
            <td><a href="/pages/teacher_detail">Doug Melzer</a></td>
            <td class="numeric">6</td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="grid_8">
    <%= widget "Attendences" do %>
        <img src="/images/graphs/student_detail_absenteeism.jpg"/>
    <% end %>
    <%= widget "Disciplinary Actions" do %>
      <ul>
        <li>Referrals: <%= (rand * 50).to_i %></li>
        <li>Truancy: <%= (rand * 50).to_i %></li>
        <li>Detentions: <%= (rand * 50).to_i %></li>
        <li>Suspensions: <%= (rand * 50).to_i %></li>
      </ul>
    <% end %>
  </div>
  <div class="grid_8">
    <%= widget "English Test Scores" do %>
        <img src="/images/graphs/student_detail_tests_math.jpg"/>
    <% end %>
    <%= widget "Math Test Scores" do %>
        <img src="/images/graphs/student_detail_tests_math.jpg"/>
    <% end %>
  </div>
  <div class="clear"></div>
</div>